@model IEnumerable<Projet_hespel_bryan.Models.Article>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (@Session["Nom"] == null)
{

}
else
{
    <p>
        @Html.ActionLink("Créer nouveau", "Create")
    </p>
}
@using (Html.BeginForm())
{
    <p>
        Chercher le nom de l'article : @Html.TextBox("SearchString")
        <input type="submit" value="Rechercher" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Catégorie.nom_categorie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Constructeur.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nom_article)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.etat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prix)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.date_mise)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.etat != true)
        {


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Catégorie.nom_categorie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Constructeur.nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nom_article)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.etat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_mise)
                </td>

            </tr>
        }
    }
</table>
